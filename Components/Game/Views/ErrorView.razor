@* 
    ErrorView.razor - Displays error state
*@

<div class="min-h-screen flex items-center justify-center p-4 bg-bg-light dark:bg-bg-dark">
    <div class="text-center space-y-6 max-w-md">
        <div class="w-20 h-20 mx-auto rounded-full bg-red-500/20 flex items-center justify-center">
            <span class="material-symbols-outlined text-red-500" style="font-size: 48px;">error</span>
        </div>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Wystąpił błąd</h1>
        <p class="text-slate-600 dark:text-slate-400">@(Message ?? "Coś poszło nie tak. Spróbuj ponownie.")</p>
        <button @onclick="GoHome" 
                class="px-8 py-3 rounded-full bg-primary text-white font-semibold
                       hover:bg-primary-dark transition-colors">
            Wróć do strony głównej
        </button>
    </div>
</div>

@code {
    [Parameter] public string? Message { get; set; }
    
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    
    private void GoHome()
    {
        Navigation.NavigateTo("/", replace: true);
    }
}
