@* 
    ScoreboardView.razor - SPA Scoreboard View
    Displays round results using ClientGameStateService
*@
@using NationsCities.Models
@using NationsCities.Services
@inject ClientGameStateService GameState
@implements IDisposable

<PageTitle>Wyniki - Państwa, Miasta</PageTitle>

@if (GameState.CurrentRoom == null || GameState.CurrentGame == null)
{
    <div class="flex items-center justify-center min-h-screen bg-bg-light dark:bg-bg-dark">
        <div class="flex flex-col items-center gap-4">
            <span class="material-symbols-outlined text-4xl text-primary animate-spin">progress_activity</span>
            <p class="text-slate-500 dark:text-slate-400">Ładowanie wyników...</p>
        </div>
    </div>
}
else
{
    var currentRound = GameState.CurrentGame.CurrentRound;
    var totalRounds = GameState.CurrentGame.TotalRounds;
    var letter = GameState.CurrentGame.CurrentLetter;
    var sortedPlayers = GameState.CurrentRoom.Players.OrderByDescending(p => p.TotalScore).ToList();
    var leader = sortedPlayers.FirstOrDefault();
    var otherPlayers = sortedPlayers.Skip(1).ToList();

    <div class="flex flex-col min-h-screen pb-24 bg-bg-light dark:bg-bg-dark">
        <!-- Header -->
        <header class="flex items-center justify-between px-4 py-4 sticky top-0 z-10 bg-bg-light/95 dark:bg-bg-dark/95 backdrop-blur-sm border-b border-slate-200 dark:border-slate-800">
            <div class="w-8"></div>
            <h1 class="text-xl font-bold text-slate-900 dark:text-white">Wyniki rundy @currentRound</h1>
            <div class="w-8"></div>
        </header>

        <!-- Game Stats -->
        <section class="px-4 py-4">
            <div class="flex gap-3">
                <div class="flex flex-1 flex-col items-center justify-center gap-1 rounded-xl bg-surface-light dark:bg-surface-dark p-4 shadow-sm border border-slate-200 dark:border-slate-800">
                    <div class="flex items-center gap-2 text-primary">
                        <span class="material-symbols-outlined text-lg">flag</span>
                        <span class="text-sm font-medium uppercase tracking-wide opacity-80">Runda</span>
                    </div>
                    <p class="text-3xl font-black text-slate-900 dark:text-white">@currentRound/@totalRounds</p>
                </div>
                <div class="flex flex-1 flex-col items-center justify-center gap-1 rounded-xl bg-surface-light dark:bg-surface-dark p-4 shadow-sm border border-slate-200 dark:border-slate-800">
                    <div class="flex items-center gap-2 text-primary">
                        <span class="material-symbols-outlined text-lg">sort_by_alpha</span>
                        <span class="text-sm font-medium uppercase tracking-wide opacity-80">Litera</span>
                    </div>
                    <p class="text-3xl font-black text-slate-900 dark:text-white">@letter</p>
                </div>
            </div>
        </section>

        <!-- Leader Card -->
        @if (leader != null)
        {
            <section class="px-4 mb-2">
                <div class="flex items-center justify-between mb-2 px-1">
                    <h2 class="text-sm font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400">Lider</h2>
                    <span class="material-symbols-outlined text-yellow-500">emoji_events</span>
                </div>
                <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-surface-light to-bg-light dark:from-surface-dark dark:to-bg-dark border border-yellow-500/30 p-5 shadow-lg">
                    <div class="absolute -right-10 -top-10 h-32 w-32 rounded-full bg-yellow-500/10 blur-3xl"></div>
                    <div class="relative z-10 flex items-center gap-4">
                        <div class="relative">
                            <div class="h-16 w-16 rounded-full flex items-center justify-center text-xl font-bold text-white border-2 border-yellow-500 shadow-lg avatar-initials"
                                 style="background-color: @leader.AvatarColor">
                                @leader.GetInitials()
                            </div>
                            <div class="absolute -top-2 -right-2 flex h-6 w-6 items-center justify-center rounded-full bg-yellow-500 text-black shadow-sm">
                                <span class="text-xs font-bold">1</span>
                            </div>
                        </div>
                        <div class="flex flex-1 flex-col">
                            <h3 class="text-lg font-bold text-slate-900 dark:text-white">@leader.Nickname</h3>
                            <p class="text-sm text-slate-500 dark:text-slate-400">Łączny wynik</p>
                        </div>
                        <div class="text-right">
                            <p class="text-2xl font-black text-slate-900 dark:text-white">@leader.TotalScore</p>
                            <p class="text-sm font-bold text-green-600 dark:text-green-400">+@leader.RoundScore pkt</p>
                            @{ var leaderPenalty = GetRoundPenalty(leader, currentRound); }
                            @if (leaderPenalty > 0)
                            {
                                <p class="text-xs font-bold text-red-400">-@leaderPenalty kara</p>
                            }
                        </div>
                    </div>
                </div>
            </section>
        }

        <!-- Other Players -->
        <section class="flex flex-col px-4 pt-2">
            <h2 class="text-sm font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-3 px-1">Pozostali gracze</h2>
            <div class="flex flex-col gap-3">
                @foreach (var (player, index) in otherPlayers.Select((p, i) => (p, i + 2)))
                {
                    <div class="flex items-center justify-between rounded-xl bg-surface-light dark:bg-surface-dark p-3 pr-4 border border-slate-200 dark:border-slate-800 shadow-sm">
                        <div class="flex items-center gap-3">
                            <div class="flex h-6 w-6 items-center justify-center rounded-full bg-slate-200 dark:bg-slate-700 text-xs font-bold text-slate-600 dark:text-slate-400">@index</div>
                            <div class="h-12 w-12 rounded-full flex items-center justify-center text-sm font-bold text-white avatar-initials"
                                 style="background-color: @player.AvatarColor">
                                @player.GetInitials()
                            </div>
                            <div class="flex flex-col">
                                <div class="flex items-center gap-1">
                                    <p class="font-bold text-slate-900 dark:text-white">@player.Nickname</p>
                                    @if (player.Violations.Any(v => v.Penalty > 0))
                                    {
                                        <span class="material-symbols-outlined text-sm text-red-500">warning</span>
                                    }
                                </div>
                                <p class="text-xs text-slate-500 dark:text-slate-400">Łącznie: <span class="font-semibold text-slate-700 dark:text-slate-300">@player.TotalScore</span></p>
                            </div>
                        </div>
                        <div class="text-right flex flex-col items-end gap-1">
                            <span class="inline-block rounded-full bg-primary/10 px-2 py-1 text-xs font-bold text-primary">+@player.RoundScore</span>
                            @{ var playerPenalty = GetRoundPenalty(player, currentRound); }
                            @if (playerPenalty > 0)
                            {
                                <span class="inline-block rounded-full bg-red-500/10 px-2 py-1 text-xs font-bold text-red-400">-@playerPenalty</span>
                            }
                        </div>
                    </div>
                }
            </div>
        </section>

        <div class="h-8"></div>
    </div>

    <!-- Footer Actions -->
    <div class="fixed bottom-0 left-0 w-full bg-surface-light/90 dark:bg-surface-dark/90 backdrop-blur-md border-t border-slate-200 dark:border-slate-800 px-4 py-4 pb-8 z-50 safe-area-bottom">
        <div class="flex flex-col gap-3 max-w-md mx-auto">
            @if (currentRound < totalRounds)
            {
                @if (GameState.IsHost)
                {
                    <button @onclick="NextRound"
                            disabled="@_isStartingRound"
                            class="flex w-full items-center justify-center gap-2 rounded-xl @(_isStartingRound ? "bg-slate-700" : "bg-primary hover:bg-primary-dark") px-6 py-4 text-base font-bold text-white shadow-lg shadow-primary/20 transition-transform btn-press">
                        @if (_isStartingRound)
                        {
                            <span class="material-symbols-outlined animate-spin">progress_activity</span>
                            <span>Rozpoczynam...</span>
                        }
                        else
                        {
                            <span>Następna runda (@(currentRound + 1))</span>
                            <span class="material-symbols-outlined">arrow_forward</span>
                        }
                    </button>
                }
                else
                {
                    <div class="text-center py-4">
                        <p class="text-lg font-bold text-slate-400 flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined animate-spin">progress_activity</span>
                            Czekam na hosta...
                        </p>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-lg font-bold text-green-400 flex items-center justify-center gap-2">
                        <span class="material-symbols-outlined">emoji_events</span>
                        Gra zakończona!
                    </p>
                </div>
            }
            @if (GameState.IsHost)
            {
                <button @onclick="EndGame"
                        class="w-full text-center text-sm font-medium text-slate-400 hover:text-red-400 py-2 transition-colors">
                    Zakończ grę
                </button>
            }
        </div>
    </div>
}

@code {
    private bool _isStartingRound = false;

    protected override void OnInitialized()
    {
        GameState.OnStateChanged += HandleStateChanged;
        GameState.OnNewRound += HandleNewRound;
    }

    private void HandleStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void HandleNewRound(char letter)
    {
        // Phase transition handled by GameState service
    }

    private async Task NextRound()
    {
        if (GameState.IsHost && !_isStartingRound)
        {
            _isStartingRound = true;
            StateHasChanged();
            await GameState.StartNextRoundAsync();
        }
    }

    private async Task EndGame()
    {
        if (GameState.IsHost)
        {
            await GameState.EndGameAsync();
        }
    }

    private int GetRoundPenalty(Player player, int roundNumber)
    {
        return player.Violations
            .Where(v => v.RoundNumber == roundNumber)
            .Sum(v => v.Penalty);
    }

    public void Dispose()
    {
        GameState.OnStateChanged -= HandleStateChanged;
        GameState.OnNewRound -= HandleNewRound;
    }
}
