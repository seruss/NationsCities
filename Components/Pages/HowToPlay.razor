@page "/how-to-play"
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Jak grać - Państwa, Miasta</PageTitle>

<div class="flex flex-col min-h-screen bg-bg-light dark:bg-bg-dark">
    <!-- Header -->
    <header class="sticky top-0 z-50 flex items-center bg-surface-light/95 dark:bg-surface-dark/95 backdrop-blur-md p-4 border-b border-slate-200 dark:border-slate-800">
        <button @onclick="GoBack" class="flex size-10 shrink-0 items-center justify-center rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors text-slate-900 dark:text-white">
            <span class="material-symbols-outlined">arrow_back</span>
        </button>
        <h2 class="text-slate-900 dark:text-white text-lg font-bold leading-tight tracking-tight flex-1 text-center pr-10">
            Jak grać
        </h2>
    </header>

    <!-- Content -->
    <main class="flex-1 flex flex-col p-4 gap-6 max-w-md mx-auto w-full pb-8">
        <!-- Introduction Banner -->
        <div class="relative w-full h-40 rounded-xl overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-r from-primary to-blue-400 opacity-90"></div>
            <div class="absolute inset-0 flex flex-col justify-center items-start p-6 text-white">
                <h1 class="text-2xl font-bold mb-2">Państwa, Miasta</h1>
                <p class="text-white/80 text-xs">Multiplayer • Real-time • Anty-Cheat</p>
            </div>
            <div class="absolute -right-6 -bottom-10 w-32 h-32 bg-white/20 rounded-full blur-xl"></div>
        </div>

        <!-- Section 1: Zasady Gry -->
        <section>
            <div class="flex items-center gap-3 mb-3">
                <div class="flex items-center justify-center rounded-lg bg-primary/10 text-primary shrink-0 size-10">
                    <span class="material-symbols-outlined">menu_book</span>
                </div>
                <h3 class="text-lg font-bold text-slate-900 dark:text-white">Zasady Gry</h3>
            </div>
            <div class="bg-surface-light dark:bg-surface-dark rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden shadow-sm">
                <!-- Step 1 -->
                <div class="flex gap-4 p-4 border-b border-slate-100 dark:border-slate-700">
                    <div class="flex flex-col items-center gap-1">
                        <span class="flex items-center justify-center size-6 rounded-full bg-primary text-white text-xs font-bold">1</span>
                        <div class="w-0.5 h-full bg-slate-100 dark:bg-slate-700 mt-1 rounded-full"></div>
                    </div>
                    <div>
                        <p class="text-base font-bold text-slate-900 dark:text-white mb-1">Pokój i litera</p>
                        <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed">
                            Utwórz pokój prywatny lub dołącz do publicznego. Na początku rundy system losuje literę alfabetu.
                        </p>
                    </div>
                </div>
                <!-- Step 2 -->
                <div class="flex gap-4 p-4 border-b border-slate-100 dark:border-slate-700">
                    <div class="flex flex-col items-center gap-1">
                        <span class="flex items-center justify-center size-6 rounded-full bg-primary text-white text-xs font-bold">2</span>
                        <div class="w-0.5 h-full bg-slate-100 dark:bg-slate-700 mt-1 rounded-full"></div>
                    </div>
                    <div>
                        <p class="text-base font-bold text-slate-900 dark:text-white mb-1">Wpisz słowa</p>
                        <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed">
                            Uzupełnij kategorie słowami zaczynającymi się na wylosowaną literę. Standardowe kategorie: Państwa, Miasta, Zwierzęta, Rośliny, Imiona, Zawody, Rzeczy, Jedzenie, Filmy, Kolory. Możesz również dodać własne kategorie!
                        </p>
                    </div>
                </div>
                <!-- Step 3 -->
                <div class="flex gap-4 p-4">
                    <div class="flex flex-col items-center gap-1">
                        <span class="flex items-center justify-center size-6 rounded-full bg-primary text-white text-xs font-bold">3</span>
                    </div>
                    <div>
                        <p class="text-base font-bold text-slate-900 dark:text-white mb-1">STOP!</p>
                        <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed">
                            Pierwszy gracz, który uzupełni wszystko, wciska przycisk STOP. Pozostali mają 10 sekund na dokończenie. Gracz, który zainicjował STOP, może kliknąć przycisk "Dodaj sekundę" – każde kliknięcie dodaje jedną sekundę do odliczania. Przydatne gdy gracie razem i ktoś prosi o chwilę więcej czasu.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Section 2: Punktacja -->
        <section>
            <div class="flex items-center gap-3 mb-3">
                <div class="flex items-center justify-center rounded-lg bg-primary/10 text-primary shrink-0 size-10">
                    <span class="material-symbols-outlined">emoji_events</span>
                </div>
                <h3 class="text-lg font-bold text-slate-900 dark:text-white">Punktacja</h3>
            </div>
            <div class="bg-surface-light dark:bg-surface-dark rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm p-4 grid gap-3">
                <div class="flex items-center justify-between p-3 rounded-lg bg-slate-50 dark:bg-slate-800/50">
                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-slate-900 dark:text-white">Jedyna poprawna odpowiedź</span>
                        <span class="text-xs text-slate-500 dark:text-slate-400">Nikt inny nie udzielił poprawnej odpowiedzi</span>
                    </div>
                    <span class="px-3 py-1 rounded-full bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-sm font-bold">15 pkt</span>
                </div>
                <div class="flex items-center justify-between p-3 rounded-lg bg-slate-50 dark:bg-slate-800/50">
                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-slate-900 dark:text-white">Poprawna odpowiedź</span>
                        <span class="text-xs text-slate-500 dark:text-slate-400">Inna niż pozostałych graczy</span>
                    </div>
                    <span class="px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400 text-sm font-bold">10 pkt</span>
                </div>
                <div class="flex items-center justify-between p-3 rounded-lg bg-slate-50 dark:bg-slate-800/50">
                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-slate-900 dark:text-white">Powtórzona odpowiedź</span>
                        <span class="text-xs text-slate-500 dark:text-slate-400">Taka sama jak u innego gracza</span>
                    </div>
                    <span class="px-3 py-1 rounded-full bg-orange-100 dark:bg-orange-900/30 text-orange-700 dark:text-orange-400 text-sm font-bold">5 pkt</span>
                </div>
                <div class="flex items-center justify-between p-3 rounded-lg bg-slate-50 dark:bg-slate-800/50">
                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-slate-900 dark:text-white">Brak / Błąd</span>
                        <span class="text-xs text-slate-500 dark:text-slate-400">Puste pole lub zła odpowiedź</span>
                    </div>
                    <span class="px-3 py-1 rounded-full bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 text-sm font-bold">0 pkt</span>
                </div>
            </div>
        </section>

        <!-- Section 3: Głosowanie -->
        <section>
            <div class="flex items-center gap-3 mb-3">
                <div class="flex items-center justify-center rounded-lg bg-primary/10 text-primary shrink-0 size-10">
                    <span class="material-symbols-outlined">how_to_vote</span>
                </div>
                <h3 class="text-lg font-bold text-slate-900 dark:text-white">Głosowanie</h3>
            </div>
            <div class="bg-surface-light dark:bg-surface-dark rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm p-5 space-y-3">
                <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed">
                    Po zakończeniu rundy następuje faza weryfikacji. Gracze widzą odpowiedzi innych i mogą je odrzucić jako niepoprawne lub oznaczyć jako duplikaty.
                </p>
                <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed">
                    <strong class="text-slate-900 dark:text-white">Decyzja większości</strong> zatwierdza lub odrzuca słowo. W przypadku remisu odpowiedź otrzymuje 0 punktów.
                </p>
            </div>
        </section>

        <!-- Section 4: System Anty-Cheat -->
        <section>
            <div class="flex items-center gap-3 mb-3">
                <div class="flex items-center justify-center rounded-lg bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 shrink-0 size-10">
                    <span class="material-symbols-outlined">gpp_maybe</span>
                </div>
                <h3 class="text-lg font-bold text-slate-900 dark:text-white">Fair Play & Anty-Cheat</h3>
            </div>
            <div class="bg-red-50 dark:bg-red-900/10 rounded-xl border border-red-100 dark:border-red-900/30 p-5 shadow-sm space-y-4">
                <div class="flex gap-3">
                    <span class="material-symbols-outlined text-red-600 dark:text-red-400 shrink-0">visibility_off</span>
                    <div>
                        <h4 class="text-sm font-bold text-slate-900 dark:text-white mb-1">Wykrywanie nieaktywności</h4>
                        <p class="text-sm text-slate-700 dark:text-slate-300 leading-relaxed">
                            Aplikacja monitoruje, czy gracz opuszcza kartę przeglądarki lub przełącza aplikacje podczas rundy.
                        </p>
                    </div>
                </div>
                
                <!-- Time penalties -->
                <div class="bg-white dark:bg-slate-900/50 p-3 rounded-lg border border-red-100 dark:border-red-900/30">
                    <span class="text-xs text-red-600 dark:text-red-400 font-bold uppercase tracking-wider mb-2 block">Blokada czasowa</span>
                    <div class="grid grid-cols-5 gap-1 text-center text-xs">
                        <div class="bg-red-100 dark:bg-red-900/30 rounded p-1">
                            <div class="font-bold text-slate-900 dark:text-white">1.</div>
                            <div class="text-red-700 dark:text-red-400 font-medium">2s</div>
                        </div>
                        <div class="bg-red-100 dark:bg-red-900/30 rounded p-1">
                            <div class="font-bold text-slate-900 dark:text-white">2.</div>
                            <div class="text-red-700 dark:text-red-400 font-medium">3s</div>
                        </div>
                        <div class="bg-red-100 dark:bg-red-900/30 rounded p-1">
                            <div class="font-bold text-slate-900 dark:text-white">3.</div>
                            <div class="text-red-700 dark:text-red-400 font-medium">5s</div>
                        </div>
                        <div class="bg-red-100 dark:bg-red-900/30 rounded p-1">
                            <div class="font-bold text-slate-900 dark:text-white">4.</div>
                            <div class="text-red-700 dark:text-red-400 font-medium">8s</div>
                        </div>
                        <div class="bg-red-100 dark:bg-red-900/30 rounded p-1">
                            <div class="font-bold text-slate-900 dark:text-white">5+</div>
                            <div class="text-red-700 dark:text-red-400 font-medium">13s</div>
                        </div>
                    </div>
                </div>

                <!-- Point penalties -->
                <div class="bg-white dark:bg-slate-900/50 p-3 rounded-lg border border-red-100 dark:border-red-900/30">
                    <span class="text-xs text-red-600 dark:text-red-400 font-bold uppercase tracking-wider mb-2 block">Kary punktowe</span>
                    <div class="grid grid-cols-4 gap-1 text-center text-xs">
                        <div class="bg-yellow-100 dark:bg-yellow-900/20 rounded p-1">
                            <div class="font-bold text-slate-900 dark:text-white">1.</div>
                            <div class="text-yellow-700 dark:text-yellow-400 font-medium">0 pkt</div>
                        </div>
                        <div class="bg-red-100 dark:bg-red-900/30 rounded p-1">
                            <div class="font-bold text-slate-900 dark:text-white">2.</div>
                            <div class="text-red-700 dark:text-red-400 font-medium">-10</div>
                        </div>
                        <div class="bg-red-100 dark:bg-red-900/30 rounded p-1">
                            <div class="font-bold text-slate-900 dark:text-white">3.</div>
                            <div class="text-red-700 dark:text-red-400 font-medium">-20</div>
                        </div>
                        <div class="bg-red-100 dark:bg-red-900/30 rounded p-1">
                            <div class="font-bold text-slate-900 dark:text-white">4+</div>
                            <div class="text-red-700 dark:text-red-400 font-medium">-30</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>

@code {
    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }
}
