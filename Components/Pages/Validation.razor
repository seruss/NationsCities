@page "/validation/{RoomCode}"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.SignalR.Client
@using NationsCities.Models
@inject NavigationManager Navigation
@inject NationsCities.Services.RoomService RoomService
@inject NationsCities.Services.GameService GameService
@implements IAsyncDisposable

<PageTitle>Głosowanie - Państwa, Miasta</PageTitle>

@if (_isLoading)
{
    <div class="flex items-center justify-center min-h-screen bg-bg-light dark:bg-bg-dark">
        <div class="flex flex-col items-center gap-4">
            <span class="material-symbols-outlined text-4xl text-primary animate-spin">progress_activity</span>
            <p class="text-slate-500 dark:text-slate-400">Ładowanie odpowiedzi...</p>
        </div>
    </div>
}
else if (_error != null)
{
    <div class="flex items-center justify-center min-h-screen p-4 bg-bg-light dark:bg-bg-dark">
        <div class="flex flex-col items-center gap-4 text-center">
            <span class="material-symbols-outlined text-4xl text-red-400">error</span>
            <p class="text-red-400">@_error</p>
            <button @onclick="GoHome" class="text-primary hover:underline">Wróć do menu</button>
        </div>
    </div>
}
else if (_answersForVoting != null)
{
    var currentCategory = _categories.ElementAtOrDefault(_currentCategoryIndex);
    var categoryName = currentCategory?.Name ?? "";
    var answersForCurrentCategory = _filteredAnswers.Where(a => a.Category == categoryName).ToList();
    var myAnswer = GetMyAnswerForCategory(categoryName);
    
    <div class="flex flex-col min-h-screen bg-bg-light dark:bg-bg-dark">
        <!-- Header with category name and progress -->
        <div class="sticky top-0 z-50 bg-bg-light/95 dark:bg-bg-dark/95 backdrop-blur-md border-b border-slate-200 dark:border-slate-800 transition-colors">
            <div class="flex items-center px-4 h-16 justify-center max-w-lg mx-auto w-full">
                <div class="text-center">
                    <h1 class="text-lg font-bold text-slate-900 dark:text-white">@categoryName</h1>
                    <span class="text-xs text-primary font-semibold">@(_currentCategoryIndex + 1) / @_categories.Count</span>
                </div>
            </div>
            
            <!-- Progress bar -->
            <div class="h-1 w-full bg-slate-200 dark:bg-slate-700">
                <div class="h-full bg-primary transition-all duration-300" style="width: @((_currentCategoryIndex + 1) * 100 / _categories.Count)%"></div>
            </div>
        </div>

        <!-- Main content -->
        <main class="flex-1 w-full max-w-lg mx-auto px-4 py-4 pb-28">
            <!-- "Twoja odpowiedź" header -->
            @if (!string.IsNullOrWhiteSpace(myAnswer))
            {
                <div class="w-full bg-primary/10 dark:bg-surface-dark border border-primary/20 dark:border-slate-700 rounded-xl p-4 mb-4 flex items-center justify-between">
                    <span class="text-sm font-medium text-slate-500 dark:text-slate-400">Twoja odpowiedź:</span>
                    <span class="text-lg font-bold text-primary dark:text-white">@myAnswer</span>
                </div>
            }
            else
            {
                <div class="w-full bg-slate-100 dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-xl p-4 mb-4 flex items-center justify-between">
                    <span class="text-sm font-medium text-slate-500 dark:text-slate-400">Twoja odpowiedź:</span>
                    <span class="text-lg font-medium text-slate-400 dark:text-slate-500 italic">Brak</span>
                </div>
            }
            
            <!-- Answer list with horizontal layout -->
            <div class="flex-1 space-y-3">
                @foreach (var answer in answersForCurrentCategory)
                {
                    <div class="bg-surface-light dark:bg-surface-dark rounded-xl p-4 shadow-sm border border-slate-200 dark:border-slate-700 flex items-center justify-between">
                        <span class="text-lg font-bold text-slate-800 dark:text-white">@answer.Answer</span>
                        <div class="flex items-center gap-2">
                            <button @onclick="@(() => Vote(answer.Id, "valid"))"
                                    disabled="@_hasSubmittedVotes"
                                    class="@($"w-10 h-10 rounded-lg flex items-center justify-center transition-all {(HasVotedValid(answer) ? "bg-green-500 text-white shadow-md" : "border border-slate-200 dark:border-slate-700 text-slate-400 dark:text-slate-500 hover:bg-green-50 dark:hover:bg-slate-700 hover:text-green-600 dark:hover:text-green-400")} disabled:opacity-50")">
                                <span class="material-symbols-outlined text-xl">check</span>
                            </button>
                            <button @onclick="@(() => Vote(answer.Id, "invalid"))"
                                    disabled="@_hasSubmittedVotes"
                                    class="@($"w-10 h-10 rounded-lg flex items-center justify-center transition-all {(HasVotedInvalid(answer) ? "bg-red-500 text-white shadow-md" : "border border-slate-200 dark:border-slate-700 text-slate-400 dark:text-slate-500 hover:bg-red-50 dark:hover:bg-slate-700 hover:text-red-600 dark:hover:text-red-400")} disabled:opacity-50")">
                                <span class="material-symbols-outlined text-xl">close</span>
                            </button>
                            <button @onclick="@(() => Vote(answer.Id, "duplicate"))"
                                    disabled="@_hasSubmittedVotes"
                                    class="@($"w-10 h-10 rounded-lg flex items-center justify-center transition-all {(HasVotedDuplicate(answer) ? "bg-amber-500 text-white shadow-md" : "border border-slate-200 dark:border-slate-700 text-slate-400 dark:text-slate-500 hover:bg-amber-50 dark:hover:bg-slate-700 hover:text-amber-600 dark:hover:text-amber-400")} disabled:opacity-50")">
                                <span class="material-symbols-outlined text-xl">content_copy</span>
                            </button>
                        </div>
                    </div>
                }
                
                @if (!answersForCurrentCategory.Any())
                {
                    <div class="text-center py-8">
                        <span class="material-symbols-outlined text-4xl text-slate-400 dark:text-slate-600">inbox</span>
                        <p class="text-slate-500 dark:text-slate-400 mt-2">Brak odpowiedzi do głosowania w tej kategorii</p>
                    </div>
                }
            </div>
        </main>

        <!-- Footer -->
        <div class="fixed bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-bg-light dark:from-bg-dark via-bg-light dark:via-bg-dark to-transparent z-40 safe-area-bottom pointer-events-none">
            <div class="max-w-lg mx-auto w-full flex flex-col gap-2 pointer-events-auto">
                @if (_hasSubmittedVotes)
                {
                    <div class="text-center py-4">
                        <p class="text-lg font-bold text-green-400 flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined">check_circle</span>
                            Głosy przesłane!
                        </p>
                        <p class="text-sm text-slate-400 mt-1">Czekam na innych graczy... (@_votesSubmittedCount/@_totalPlayers)</p>
                    </div>
                    
                    @if (_isHost)
                    {
                        <button @onclick="ForceEndVoting"
                                class="w-full text-center text-sm font-medium text-slate-400 hover:text-red-400 py-2 transition-colors">
                            Wymuś zakończenie głosowania
                        </button>
                    }
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string RoomCode { get; set; } = "";

    private HubConnection? _hubConnection;
    private Room? _room;
    private List<AnswerForVoting>? _answersForVoting;
    private List<AnswerForVoting> _filteredAnswers = [];
    private List<Category> _categories = [];
    private string? _myConnectionId;
    private string? _myPlayerId;
    private string _nickname = "";
    private string? _error;
    private bool _isLoading = true;
    private bool _isHost = false;
    private bool _hasSubmittedVotes = false;
    private int _votesSubmittedCount = 0;
    private int _totalPlayers = 0;
    
    private int _roundNumber = 1;
    private int _totalRounds = 1;
    private char _letter = 'A';
    
    // Category navigation
    private int _currentCategoryIndex = 0;
    
    // Track player's own votes separately (answerId -> voteType: "valid", "invalid", "duplicate")
    private Dictionary<string, string?> _myVotes = new();

    protected override async Task OnInitializedAsync()
    {
        // Get nickname from URL
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        _nickname = query["nick"] ?? "";

        if (string.IsNullOrEmpty(_nickname))
        {
            _error = "Brak nicku. Wróć do lobby.";
            _isLoading = false;
            return;
        }

        try
        {
            // Setup SignalR and join game
            _hubConnection = new HubConnectionBuilder()
                .WithUrl(Navigation.ToAbsoluteUri("/gamehub"))
                .Build();

            SetupHubCallbacks();
            await _hubConnection.StartAsync();
            _myConnectionId = _hubConnection.ConnectionId;

            // Join the game (adds to SignalR group)
            var joined = await _hubConnection.InvokeAsync<bool>("JoinGame", RoomCode, _nickname);
            if (!joined)
            {
                _error = "Nie udało się dołączyć do gry.";
                _isLoading = false;
                return;
            }

            // Get room data
            _room = RoomService.GetRoom(RoomCode);
            
            if (_room?.CurrentGame == null)
            {
                _error = "Gra nie istnieje.";
                _isLoading = false;
                return;
            }

            // Find my player ID and check if host
            var myPlayer = _room.Players.FirstOrDefault(p => p.Nickname.Equals(_nickname, StringComparison.OrdinalIgnoreCase));
            _myPlayerId = myPlayer?.ConnectionId;
            _isHost = myPlayer?.IsHost ?? false;
            _totalPlayers = _room.Players.Count;

            var game = _room.CurrentGame;
            _roundNumber = game.CurrentRound;
            _totalRounds = game.TotalRounds;
            _letter = game.CurrentLetter;
            _categories = game.Categories;
            _answersForVoting = game.AnswersForVoting;
            
            // Filter out empty answers and own answers (by nickname)
            _filteredAnswers = _answersForVoting
                .Where(a => !string.IsNullOrWhiteSpace(a.Answer)) // No empty answers
                .Where(a => !a.SubmitterNicknames.Any(n => n.Equals(_nickname, StringComparison.OrdinalIgnoreCase))) // Hide own answers
                .ToList();
            _isLoading = false;
        }
        catch (Exception ex)
        {
            _error = $"Błąd: {ex.Message}";
            _isLoading = false;
        }
    }

    private void SetupHubCallbacks()
    {
        if (_hubConnection == null) return;

        _hubConnection.On<string, int, int, int>("OnVoteCast", (answerId, validCount, invalidCount, duplicateCount) =>
        {
            var answer = _answersForVoting?.FirstOrDefault(a => a.Id == answerId);
            if (answer != null)
            {
                // Clear and rebuild vote lists from server counts
                answer.VotesValid.Clear();
                answer.VotesInvalid.Clear();
                answer.VotesDuplicate.Clear();
                
                // Add placeholder IDs to match the counts
                for (int i = 0; i < validCount; i++)
                    answer.VotesValid.Add($"vote_{i}");
                for (int i = 0; i < invalidCount; i++)
                    answer.VotesInvalid.Add($"vote_{i}");
                for (int i = 0; i < duplicateCount; i++)
                    answer.VotesDuplicate.Add($"vote_{i}");
                
                InvokeAsync(StateHasChanged);
            }
        });

        _hubConnection.On<int>("OnVotesSubmitted", submittedCount =>
        {
            _votesSubmittedCount = submittedCount;
            InvokeAsync(StateHasChanged);
        });

        _hubConnection.On("OnVotingEnded", () =>
        {
            // On last round, go directly to final results
            if (_roundNumber >= _totalRounds)
            {
                Navigation.NavigateTo($"/finalresults/{RoomCode}?nick={Uri.EscapeDataString(_nickname)}");
            }
            else
            {
                Navigation.NavigateTo($"/scoreboard/{RoomCode}?nick={Uri.EscapeDataString(_nickname)}");
            }
        });
    }

    private async Task Vote(string answerId, string voteType)
    {
        if (_hubConnection != null && !_hasSubmittedVotes)
        {
            // Track this player's vote locally
            _myVotes[answerId] = voteType;
            
            await _hubConnection.InvokeAsync("VoteAnswer", RoomCode, answerId, voteType);
            
            // Optimistic update
            var answer = _answersForVoting?.FirstOrDefault(a => a.Id == answerId);
            if (answer != null && _myConnectionId != null)
            {
                answer.VotesValid.Remove(_myConnectionId);
                answer.VotesInvalid.Remove(_myConnectionId);
                answer.VotesDuplicate.Remove(_myConnectionId);
                
                switch (voteType)
                {
                    case "valid":
                        answer.VotesValid.Add(_myConnectionId);
                        break;
                    case "invalid":
                        answer.VotesInvalid.Add(_myConnectionId);
                        break;
                    case "duplicate":
                        answer.VotesDuplicate.Add(_myConnectionId);
                        break;
                }
            }
            
            // Check if all answers in current category are voted - auto-advance
            await CheckAndAutoAdvance();
            
            StateHasChanged();
        }
    }
    
    private async Task CheckAndAutoAdvance()
    {
        var currentCategory = _categories.ElementAtOrDefault(_currentCategoryIndex);
        var categoryName = currentCategory?.Name ?? "";
        var answersForCurrentCategory = _filteredAnswers.Where(a => a.Category == categoryName).ToList();
        
        // Check if all answers in this category have been voted on
        var allVoted = answersForCurrentCategory.All(a => _myVotes.ContainsKey(a.Id));
        
        if (allVoted && answersForCurrentCategory.Any())
        {
            // Small delay for visual feedback
            await Task.Delay(300);
            
            if (_currentCategoryIndex < _categories.Count - 1)
            {
                // Go to next category
                _currentCategoryIndex++;
                StateHasChanged();
            }
            else
            {
                // Last category - auto-submit
                await SubmitVotes();
            }
        }
    }

    private async Task SubmitVotes()
    {
        if (_hubConnection != null && !_hasSubmittedVotes)
        {
            _hasSubmittedVotes = true;
            await _hubConnection.InvokeAsync("SubmitVotes", RoomCode);
            StateHasChanged();
        }
    }

    private async Task ForceEndVoting()
    {
        if (_hubConnection != null && _isHost)
        {
            await _hubConnection.InvokeAsync("FinalizeVoting", RoomCode);
        }
    }

    private bool HasVotedValid(AnswerForVoting answer)
    {
        if (_myVotes.TryGetValue(answer.Id, out var vote))
            return vote == "valid";
        return _myConnectionId != null && answer.VotesValid.Contains(_myConnectionId);
    }

    private bool HasVotedInvalid(AnswerForVoting answer)
    {
        if (_myVotes.TryGetValue(answer.Id, out var vote))
            return vote == "invalid";
        return _myConnectionId != null && answer.VotesInvalid.Contains(_myConnectionId);
    }

    private bool HasVotedDuplicate(AnswerForVoting answer)
    {
        if (_myVotes.TryGetValue(answer.Id, out var vote))
            return vote == "duplicate";
        return _myConnectionId != null && answer.VotesDuplicate.Contains(_myConnectionId);
    }

    private void GoToPreviousCategory()
    {
        if (_currentCategoryIndex > 0)
        {
            _currentCategoryIndex--;
        }
    }

    private void GoToNextCategory()
    {
        if (_currentCategoryIndex < _categories.Count - 1)
        {
            _currentCategoryIndex++;
        }
    }

    private string GetMyAnswerForCategory(string categoryName)
    {
        // Look up player's answer from AnswersForVoting by nickname
        var myAnswer = _answersForVoting?
            .FirstOrDefault(a => a.Category == categoryName && 
                a.SubmitterNicknames.Any(n => n.Equals(_nickname, StringComparison.OrdinalIgnoreCase)));
        return myAnswer?.Answer ?? "";
    }

    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection != null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
}
